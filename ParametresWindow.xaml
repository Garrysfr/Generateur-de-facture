<Window x:Class="GenerateurFactures.ParametresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres"
        Height="600"
        Width="500"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Paramètres de l'application"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Informations Entreprise -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Informations de votre entreprise"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Nom de l'entreprise"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Parametres.Entreprise.Nom, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Adresse"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Parametres.Entreprise.Adresse, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Code Postal"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Parametres.Entreprise.CodePostal, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Ville"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Parametres.Entreprise.Ville, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="SIRET"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Parametres.Entreprise.Siret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Email"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Parametres.Entreprise.Email, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Téléphone"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Parametres.Entreprise.Telephone, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Paramètres par défaut -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Paramètres par défaut"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <StackPanel>
                            <TextBlock Text="Taux de TVA par défaut (%)"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Parametres.TauxTvaParDefaut, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annuler"
                    Style="{StaticResource ModernButton}"
                    Background="Gray"
                    Click="Annuler_Click"
                    Margin="0,0,10,0"
                    Padding="20,10"/>
            <Button Content="Sauvegarder"
                    Style="{StaticResource ModernButton}"
                    Click="Sauvegarder_Click"
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window>